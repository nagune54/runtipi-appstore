{
  "services": [
    {
      "name": "drupal",
      "image": "drupal:10-apache",
      "isMain": true,
      "internalPort": 8080,
      "environment": {},
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/modules",
          "containerPath": "/var/www/html/modules"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/profiles",
          "containerPath": "/var/www/html/profiles"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/themes",
          "containerPath": "/var/www/html/themes"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/sites",
          "containerPath": "/var/www/html/sites"
        }
      ],
      "dependsOn": ["drupal-db"]
    },
    {
      "name": "drupal-db",
      "image": "postgres:16-alpine",
      "environment": {
        "POSTGRES_USER": "tipi",
        "POSTGRES_PASSWORD": "${DB_PASSWORD}",
        "POSTGRES_DB": "ryot"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres",
          "containerPath": "/var/lib/postgresql/data"
        }
      ]
    }
  ],
  "$schema": "../dynamic-compose-schema.json"
}