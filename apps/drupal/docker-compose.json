{
  "services": [
    {
      "name": "drupal",
      "image": "php8.4-apache-bullseye",
      "isMain": true,
      "internalPort": 80,
      "environment": {
        "DRUPAL_DB_NAME": "drupal",
        "DRUPAL_DB_USER": "tipi",
        "DRUPAL_DB_PASSWORD": "${DB_PASSWORD}",
        "DRUPAL_DB_HOST": "drupal-db"
      },
      "volumes": [
      ],
      "dependsOn": ["drupal-db"]
    },
    {
      "name": "drupal-db",
      "image": "mariadb:10.6",
      "environment": {
        "MARIADB_USER": "tipi",
        "MARIADB_PASSWORD": "${DB_PASSWORD}",
        "MARIADB_DATABASE": "drupal",
        "MARIADB_ROOT_PASSWORD": "${DB_PASSWORD}"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/mariadb",
          "containerPath": "/var/lib/mysql"
        }
      ]
    }
  ],
  "$schema": "../dynamic-compose-schema.json"
}
